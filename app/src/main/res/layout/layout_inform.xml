<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/txt_inform"
        android:layout_width="179dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:text="TOTAL"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtSideCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/txtTotalPrice" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ico_side"
            android:foregroundTintMode="src_atop"
            android:tint="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtSideCount"
            android:layout_toStartOf="@+id/txtSideCount" />

        <TextView
            android:id="@+id/txtSingleCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ico_set"
            android:foregroundTintMode="src_atop"
            android:tint="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtSetCount"
            android:layout_toStartOf="@+id/txtSetCount" />

        <TextView
            android:id="@+id/txtSetCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView6"
            android:layout_toStartOf="@+id/imageView6"
            android:layout_alignBottom="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ico_single"
            android:foregroundTintMode="src_atop"
            android:tint="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtSingleCount"
            android:layout_toStartOf="@+id/txtSingleCount" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtTotalPrice"
            android:layout_alignBottom="@+id/txtTotalPrice"
            android:layout_toLeftOf="@+id/txtTotalPrice"
            android:layout_toStartOf="@+id/txtTotalPrice"
            android:paddingRight="4dp"
            android:text="ï¿¦"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView6" />

    </RelativeLayout>

</LinearLayout>